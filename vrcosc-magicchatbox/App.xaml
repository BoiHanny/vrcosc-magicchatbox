            x:Key="TextBlockShadowEffect"
            BlurRadius="10"
            Opacity="1"
            ShadowDepth="0"
            Color="#251153" />

        <!--  Image Shadow Effect  -->
        <DropShadowEffect
            x:Key="ImageShadowEffect"
            BlurRadius="25"
            Opacity="0.4"
            ShadowDepth="0"
