<Window
    x:Class="vrcosc_magicchatbox.UI.Dialogs.ManualPulsoidAuth"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:vrcosc_magicchatbox.UI.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Connect With Pulsoid"
    Width="700"
    Height="250"
    Background="#41375B"
    ResizeMode="NoResize"
    mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="55"
            CornerRadius="0"
            GlassFrameThickness="1"
            ResizeBorderThickness="8"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF2D1267" />
        <Grid x:Name="Drag_area" Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Image Margin="2" Source="/Img/MagicOSC_icon.png" />
                <TextBlock
                    Margin="6,1,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Albert Sans Thin"
                    FontSize="14"
                    Foreground="White"
                    RenderOptions.BitmapScalingMode="NearestNeighbor"
                    Text="Connect with Pulsoid">
                    <TextBlock.Effect>
                        <DropShadowEffect
                            BlurRadius="15"
                            Direction="315"
                            Opacity="1"
                            ShadowDepth="0"
                            Color="Black" />
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid x:Name="FirstPage" d:Visibility="Visible">
                <Button
                    x:Name="ConnectWithPulsoidWeb"
                    Width="400"
                    Height="50"
                    Padding="5"
                    Click="ConnectWithPulsoidWeb_Click"
                    Style="{StaticResource Status_Button_style}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Height="35"
                                    Margin="0,0,3,0"
                                    Source="/Img/Icons/Pulsoid.png" />
                                <TextBlock
                                    Margin="0,-2,5,0"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    Text="Start web authentication with Pulsoid" />
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </Grid>
            <Grid x:Name="SecondPage" Visibility="Hidden">

                <Border
                    Width="600"
                    Height="40"
                    Background="#FF7B7195"
                    BorderThickness="0"
                    CornerRadius="5">
                    <PasswordBox
                        x:Name="Token"
                        Padding="5,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="20"
                        Foreground="#FF240E54"
                        PasswordChanged="Token_PasswordChanged"
                        PasswordChar="●" />
                </Border>


                <TextBlock
                    Margin="25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontFamily="Comfortaa Light"
                    FontSize="20"
                    Foreground="White"
                    RenderOptions.BitmapScalingMode="NearestNeighbor"
                    Text="Login, click 'Authorize app', then paste the access_token (or the full redirect URL).">
                    <TextBlock.Effect>
                        <DropShadowEffect
                            BlurRadius="10"
                            Opacity="1"
                            ShadowDepth="0"
                            Color="#251153" />
                    </TextBlock.Effect>
                </TextBlock>

                <Button
                    x:Name="Connect"
                    Width="100"
                    Height="40"
                    Margin="350,134,250,25"
                    Padding="5"
                    Click="Connect_Click"
                    IsEnabled="False"
                    Style="{StaticResource Status_Button_style}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Height="20"
                                    Margin="0,0,3,0"
                                    Source="/Img/Icons/Pulsoid.png" />
                                <TextBlock
                                    Margin="0,-2,5,0"
                                    VerticalAlignment="Center"
                                    FontSize="15"
                                    Text="Connect" />
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
                <Button
                    x:Name="ClearAndPaste"
                    Height="40"
                    Margin="284,134,355,25"
                    Padding="5"
                    Click="ClearAndPaste_Click"
                    Style="{StaticResource Status_Button_style}">
                    <Button.ContentTemplate>
                        <DataTemplate>


                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="15"
                                Text="Paste" />
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </Grid>
        </Grid>

        <Grid Grid.Row="0" HorizontalAlignment="Right">
            <Button
                Name="Button_close"
                Grid.Column="2"
                Width="40"
                Height="35"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#004D0606"
                BorderThickness="0"
                Click="Button_close_Click"
                Cursor="Hand"
                Style="{DynamicResource CloseButtonStyle}"
                WindowChrome.IsHitTestVisibleInChrome="True">
                <Image Height="15" Source="/img/icons/Close_ico.png" />
            </Button>
        </Grid>

    </Grid>
</Window>
