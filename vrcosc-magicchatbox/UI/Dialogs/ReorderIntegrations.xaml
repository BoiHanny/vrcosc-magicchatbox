<Window
    x:Class="vrcosc_magicchatbox.UI.Dialogs.ReorderIntegrations"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Reorder Integrations"
    Width="520"
    Height="520"
    Background="#41375B"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="55"
            CornerRadius="0"
            GlassFrameThickness="1"
            ResizeBorderThickness="8"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="0.5,1">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterX="0.5" CenterY="0.5" />
                            <SkewTransform AngleX="-10" CenterX="0.5" CenterY="0.5" />
                            <RotateTransform CenterX="0.5" CenterY="0.5" />
                            <TranslateTransform />
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Offset="1" Color="#FF1A0842" />
                    <GradientStop Color="#FF240E54" />
                    <GradientStop Offset="0.539" Color="#FF630FA0" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Grid x:Name="Drag_area" Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Image Margin="2" Source="/Img/MagicOSC_icon.png" />
                <TextBlock
                    Margin="6,1,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Albert Sans Thin"
                    FontSize="14"
                    Foreground="White"
                    RenderOptions.BitmapScalingMode="NearestNeighbor"
                    Text="Reorder integrations">
                    <TextBlock.Effect>
                        <DropShadowEffect
                            BlurRadius="15"
                            Direction="315"
                            Opacity="1"
                            ShadowDepth="0"
                            Color="Black" />
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                FontFamily="Comfortaa Light"
                FontSize="14"
                Foreground="LightYellow"
                Text="Order affects the integrations list and OSC message priority." />

            <Grid Grid.Row="1" Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ListBox
                    x:Name="OrderList"
                    Background="#FF7B7195"
                    BorderThickness="0"
                    FontSize="15"
                    Foreground="#FF240E54"
                    ItemsSource="{Binding TempOrder}" />

                <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                    <Button
                        Width="80"
                        Height="30"
                        Margin="0,0,0,6"
                        Click="MoveUp_Click"
                        Style="{StaticResource Status_Button_style}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="Up" />
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    <Button
                        Width="80"
                        Height="30"
                        Margin="0,0,0,6"
                        Click="MoveDown_Click"
                        Style="{StaticResource Status_Button_style}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="Down" />
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    <Button
                        Width="80"
                        Height="30"
                        Click="Reset_Click"
                        Style="{StaticResource Status_Button_style}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="Default" />
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button
                    Width="90"
                    Height="32"
                    Margin="0,0,8,0"
                    Click="Save_Click"
                    Style="{StaticResource Status_Button_style}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Save" />
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
                <Button
                    Width="90"
                    Height="32"
                    Click="Cancel_Click"
                    Style="{StaticResource Status_Button_style}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Cancel" />
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="0" HorizontalAlignment="Right">
            <Button
                Name="Button_close"
                Grid.Column="2"
                Width="40"
                Height="35"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#004D0606"
                BorderThickness="0"
                Click="Button_close_Click"
                Cursor="Hand"
                Style="{DynamicResource CloseButtonStyle}"
                WindowChrome.IsHitTestVisibleInChrome="True">
                <Image Height="15" Source="/img/icons/Close_ico.png" />
            </Button>
        </Grid>
    </Grid>
</Window>
