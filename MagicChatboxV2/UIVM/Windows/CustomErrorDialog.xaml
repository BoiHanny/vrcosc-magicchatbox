<Window
    x:Class="MagicChatboxV2.UIVM.Windows.CustomErrorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MagicChatboxV2.UIVM.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Error"
    Width="500"
    Height="300"
    mc:Ignorable="d">
    <StackPanel Margin="10">
        <TextBlock
            x:Name="txtMainError"
            FontWeight="Bold"
            Text="Main Error Message" />
        <ScrollViewer Height="150" Margin="0,10">
            <TextBlock x:Name="txtStackTrace" Text="Stack Trace" />
        </ScrollViewer>
        <Button
            x:Name="btnContinue"
            Margin="0,10,0,0"
            Click="BtnContinue_Click"
            Content="Continue" />
        <Button
            x:Name="btnExit"
            Click="BtnExit_Click"
            Content="Exit" />
    </StackPanel>
</Window>
