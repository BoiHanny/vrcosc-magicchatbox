<Window
    x:Class="MagicChatboxV2.Startup.Windows.LoadingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Starting MagicChatbox"
    Width="400"
    AllowsTransparency="True"
    Background="Transparent"
    Cursor="AppStarting"
    ResizeMode="NoResize"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <DropShadowEffect
            x:Key="ShadowEffect"
            BlurRadius="20"
            Opacity="0.4"
            ShadowDepth="0"
            Color="Black" />
    </Window.Resources>
    <Border
        Margin="15"
        Background="#FF2D1267"
        Effect="{StaticResource ShadowEffect}"
        SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Background="#FF2D1267"
                Orientation="Horizontal">
                <Grid
                    x:Name="grabhandle"
                    Margin="0,0,70,0"
                    MouseDown="DraggableGrid_MouseLeftButtonDown">
                    <TextBlock
                        Margin="36,-4,0,0"
                        Padding="0,12,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontFamily="Albert Sans Thin"
                        FontSize="12"
                        Foreground="White"
                        Text="MagicChatbox">
                        <TextBlock.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Direction="315"
                                Opacity="1"
                                ShadowDepth="0"
                                Color="Black" />
                        </TextBlock.Effect>
                    </TextBlock>
                    <Image
                        Margin="8,5,122,4"
                        Source="/Img/Icons/MagicChatbox_ico.png"
                        Stretch="Fill" />
                    <TextBlock
                        Margin="117,-4,0,0"
                        Padding="0,12,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontFamily="Albert Sans Thin"
                        FontSize="12"
                        Foreground="White"
                        Text="{Binding AppVersion.VersionNumber}">
                        <TextBlock.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Direction="315"
                                Opacity="1"
                                ShadowDepth="0"
                                Color="Black" />
                        </TextBlock.Effect>
                    </TextBlock>
                </Grid>
            </StackPanel>
            <Grid Grid.Row="1" Background="#ADA6BB">
                <StackPanel Margin="36,20">
                    <TextBlock
                        FontSize="13"
                        Text="Sit back, relax, and let us prepare your app"
                        TextWrapping="Wrap" />
                    <ProgressBar
                        Height="9"
                        Margin="0,15"
                        RenderTransformOrigin="0.5,0.5"
                        Value="{Binding ProgressValue}">
                        <ProgressBar.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleY="-1" />
                                <SkewTransform />
                                <RotateTransform />
                                <TranslateTransform />
                            </TransformGroup>
                        </ProgressBar.RenderTransform>
                    </ProgressBar>
                    <TextBlock
                        Height="39"
                        FontSize="13"
                        Text="{Binding ProgressMessage}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>
            <Border
                Grid.Row="2"
                BorderBrush="#FF7F759A"
                BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                            <LinearGradientBrush.RelativeTransform>
                                <TransformGroup>
                                    <ScaleTransform CenterX="0.5" CenterY="0.5" />
                                    <SkewTransform CenterX="0.5" CenterY="0.5" />
                                    <RotateTransform Angle="-106.965" CenterX="0.5" CenterY="0.5" />
                                    <TranslateTransform />
                                </TransformGroup>
                            </LinearGradientBrush.RelativeTransform>
                            <GradientStop Color="#FF3B2075" />
                            <GradientStop Offset="1" Color="#FF562020" />
                        </LinearGradientBrush>
                    </Grid.Background>
                    <StackPanel
                        Margin="0,0,24,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Width="69"
                            Height="25"
                            Command="{Binding CancelCommand}"
                            Content="Cancel"
                            Style="{StaticResource Status_Button_style}">
                            <Button.Effect>
                                <DropShadowEffect
                                    BlurRadius="5"
                                    Direction="0"
                                    Opacity="0.7"
                                    ShadowDepth="0"
                                    Color="#FFCE5050" />
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                    <TextBlock
                        Margin="10,2,0,0"
                        Padding="0,12,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontFamily="Albert Sans Thin"
                        FontSize="12"
                        Foreground="#FF9AA1FF"
                        Text="By BoiHanny">
                        <TextBlock.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Direction="315"
                                Opacity="1"
                                ShadowDepth="0"
                                Color="#FF122BFF" />
                        </TextBlock.Effect>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>